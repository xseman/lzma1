{
	"name": "lzma1",
	"type": "module",
	"version": "0.1.2",
	"license": "MIT",
	"author": "Filip Seman <filip.seman@pm.me>",
	"description": "A JavaScript implementation of the Lempel-Ziv-Markov (LZMA) chain compression algorithm",
	"funding": "https://github.com/sponsors/xseman",
	"homepage": "https://github.com/xseman/lzma1#readme",
	"keywords": [
		"lzma",
		"lzma1",
		"lzma alone"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xseman/lzma1.git"
	},
	"scripts": {
		"prebuild": "tsc --build --clean",
		"build": "tsc",
		"fmt": "dprint fmt",
		"fmt:check": "dprint check",
		"typecheck": "tsc --noEmit",
		"test": "bun test --coverage --coverage-reporter=text --coverage-reporter=lcov ./src/lzma.test.ts",
		"test:watch": "bun test --watch ./src/lzma.test.ts"
	},
	"devDependencies": {
		"@types/bun": "^1.2.18",
		"@types/node": "^24.0.14",
		"dprint": "~0.50.0",
		"typescript": "^5.8.0"
	},
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		}
	},
	"files": [
		"lib",
		"!lib/*test*"
	]
}
